<div class="container">
  <h1 class="m-5 text-center">My Rooms ðŸšª</h1>

  <div class="row">
    <div class="col-4 mb-3">
      <%= link_to new_room_path do %>
        <div class="card-new-trip">
          <h2>+ Add a room</h2>
        </div>
      <% end %>
    </div>
    <% @rooms.each do |room| %>
      <div class="col-4 mb-3">
        <%= link_to room_path(room) do %>
          <div class="card-trip">
            <div class="card-trip-infos">
              <div>
                <h2><%= room.name %></h2>
                <p><%= room.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
